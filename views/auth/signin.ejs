<%- include('../parts/header.ejs') %>

<body>
    <%- include('../parts/navbar.ejs') %>
    <div class="container">
        <h4 class="text-center my-3">Create new account</h2>
        <div class="row justify-content-center">
            <form class="col-4 align-self-center" method="POST" enctype="multipart/form-data" >
                <div class="form-group">
                    <label class="w-100">Name
                        <input name="name" type="text" class="form-control">
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100">Email
                        <input name="email" type="email" class="form-control">
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100">Password
                        <input name="password" type="password" class="form-control" >
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100">Confirm password
                        <input name="confPassword" type="password" class="form-control" >
                    </label>
                </div>
                <button type="submit" class="btn btn-primary col-6 offset-3">Sign in</button>
            </form>
        </div>
    </div>
</body>

