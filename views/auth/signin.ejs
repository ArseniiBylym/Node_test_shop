<%- include('../parts/header.ejs') %>

<body>
    <%- include('../parts/navbar.ejs') %>
     <%- include('../parts/messages.ejs') %>
    <div class="container">
        <h4 class="text-center my-3">Create new account</h2>
        <div class="row justify-content-center">
            <form class="col-4 align-self-center" method="POST" enctype="multipart/form-data" >
                <div class="form-group">
                    <label class="w-100">Name <sup class="text-danger" style="font-size: 8px">&#10033;</sup>
                        <input 
                            name="name" 
                            type="text" 
                            class="<%= validationErrors.name ? 'form-control is-invalid' : defaultValues.name ? 'form-control is-valid' : 'form-control' %>" 
                            value="<%= defaultValues.name %>"
                        >
                        <% if(validationErrors.name) {%>
                            <div class="invalid-feedback"><%= validationErrors.name %></div>
                        <% } else if(defaultValues.name) {%>
                            <div class="valid-feedback">Looks good!</div>
                        <% } %>
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100">Email <sup class="text-danger" style="font-size: 8px">&#10033;</sup>
                        <input 
                            name="email" 
                            type="email" 
                            class="<%= validationErrors.email ? 'form-control is-invalid' : defaultValues.email ? 'form-control is-valid' : 'form-control' %>" 
                            value="<%= defaultValues.email %>"
                        >
                        <% if(validationErrors.email) {%>
                            <div class="invalid-feedback"><%= validationErrors.email %></div>
                        <% } else if(defaultValues.email) {%>
                            <div class="valid-feedback">Looks good!</div>
                        <% } %>
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100">Password <sup class="text-danger" style="font-size: 8px">&#10033;</sup>
                        <input 
                            name="password" 
                            type="password" 
                            class="<%= validationErrors.password ? 'form-control is-invalid' : defaultValues.password ? 'form-control is-valid' : 'form-control' %>" 
                            value="<%= defaultValues.password %>"
                        >
                         <% if(validationErrors.password) {%>
                            <div class="invalid-feedback"><%= validationErrors.password %></div>
                         <% } else if(defaultValues.password) {%>
                            <div class="valid-feedback">Looks good!</div>
                        <% } %>
                    </label>
                </div>
                <div class="form-group">
                    <label class="w-100">Confirm password <sup class="text-danger" style="font-size: 8px">&#10033;</sup>
                        <input 
                            name="confPassword" 
                            type="password" 
                            class="<%= validationErrors.confPassword ? 'form-control is-invalid' : defaultValues.confPassword ? 'form-control is-valid' : 'form-control' %>"
                            value="<%= defaultValues.confPassword %>"
                        >
                         <% if(validationErrors.confPassword) {%>
                            <div class="invalid-feedback"><%= validationErrors.confPassword %></div>
                        <% } else if(defaultValues.confPassword) {%>
                            <div class="valid-feedback">Looks good!</div>
                        <% } %>
                    </label>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary col-6 offset-3">Sign in</button>
            </form>
        </div>
    </div>
</body>

<%- include('../parts/footer.ejs') %>