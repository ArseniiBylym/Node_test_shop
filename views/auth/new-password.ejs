<%- include('../parts/header.ejs') %>

<body>
    <%- include('../parts/navbar.ejs') %>
    <%- include('../parts/messages.ejs') %>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-4 ">
                <div class="card mt-3 p-3">
                    <h4 class="text-center my-3">New password</h2>
                    <form class="" method="POST" enctype="multipart/form-data" action="/new-password">
                        <div class="form-group">
                            <label class="w-100">Password
                                <input name="password" type="password" class="form-control">
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="w-100">Confirm password
                                <input name="confirmPassword" type="password" class="form-control">
                            </label>
                        </div>
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-primary col-6 offset-3">Update password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include('../parts/footer.ejs') %>