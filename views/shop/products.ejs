<%- include('../parts/header.ejs') %>

<body>
    <%- include('../parts/navbar.ejs') %>
    <%- include('../parts/messages.ejs') %>
    <h2 class="text-center mt-4">Products list</h2>

        <div class="container">
            <div class="row">
                <%if (products.length > 0) { %>
                    <% for (let prod of products) {%>
                        <div class="col card m-4" style="width: 18rem;">
                            <img class="card-img-top" src="/<%= prod.imageUrl %>" alt="">
                            <div class="card-body d-flex flex-column justify-content-end">
                                <h5 class="card-title text-center "><%= prod.title %></h5>
                                <p class="card-text text-center">$ <%= prod.price %></p>
                                <a style="flex-basis: auto" href="/products/<%= prod._id %>" class="btn btn-primary text-center col-6 offset-3">Show details</a>
                            </div>
                        </div>
                    <% } %>
                <% } else {%>
                    <div>No products</div>
                <% } %>
            </div>
        </div>
</body>
<%- include('../parts/footer.ejs') %>
</html>